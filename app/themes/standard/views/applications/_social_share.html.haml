-# #social
-#   = render "applications/twitter_share_button", application: @application
-#   = render "applications/facebook_share_button", application: @application

%aside.social-share
  %h4.social-share-heading
    Share

  %ul
    %li
      = link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.original_url}&t=", title: "Share on Facebook", class: 'button-action' do
        %i.fi-social-facebook
        Facebook

    %li
      = link_to "https://twitter.com/intent/tweet?url=#{request.original_url}&text=&via=PlanningAlerts", title: "Share on Twitter", class: 'button-action'  do
        %i.fi-social-twitter
        Twitter
